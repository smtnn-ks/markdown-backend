generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             Int     @id @default(autoincrement())
  email          String  @unique
  password       String
  refreshToken   String
  activationLink String
  isActivated    Boolean @default(false)
  docs           Doc[]
}

model Doc {
  id     String @id
  title  String
  path   String
  userId Int
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  pics   Pic[]
}

model Pic {
  id    String @id
  path  String
  docId String
  doc   Doc    @relation(fields: [docId], references: [id], onDelete: Cascade)
}
